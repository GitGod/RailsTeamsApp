<div class="row">
<% @teams.each do |team| %>
  <div class="col-md-4 d-flex align-items-stretch">
    <div class="card mb-4 box-shadow">
      <% if team.logo.exists? %>
        <%= image_tag(team.logo.url(:large), class: "card-img-top") %>
      <% else %>
        <%= holder_tag '600x600', team.name, 'sky', { class: 'card-img-top' }, { auto: 'yes' } %>
      <% end %>

      <div class="card-body">
        <h4><%= link_to team.name, team, class: "text-dark" %></h4>
        <p class="card-text text-muted"><%= team.city %></p>
        <div class="d-flex justify-content-between align-items-center">
          <div>
            <%= link_to 'Edit', edit_team_path(team), class: "btn btn-sm btn-outline-primary" %>
            <%= link_to 'Delete', team, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-outline-danger" %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
</div>
