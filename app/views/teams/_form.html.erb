<%= form_with(model: team, local: true) do |form| %>
  <% if team.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(team.errors.count, "error") %> prohibited this team from being saved:</h2>

      <ul>
      <% team.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="form-group col-md-6">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

    <div class="form-group col-md-6">
      <%= form.label :city %>
      <%= form.text_field :city, class: "form-control" %>
      </div>
  </div>

  <div class="form-group">
    <%= form.label :founded %>
    <%= form.date_select :founded, { discard_day: true, discard_month:true }, { :class => 'form-control' } %>
  </div>

   <% if @team.logo.exists? %>
    <hr class="mb-4">

    <div class="row">
      <div class="form-group col-md-6">
        <%= form.label :logo, "New logo" %>
        <%= form.file_field :logo, class: "form-control-file" %>
        <small class="form-text text-muted">File not bigger than 1MB.</small>
      </div>

      <div class="form-group col-md-6">
        <p>Current logo</p>
        <%= image_tag(team.logo.url(:thumb), class: "img-fluid border rounded") %>
      </div>
    </div>
  <% else %>
    <div class="form-group">
      <%= form.label :logo %>
      <span class="text-muted">(Optional)</span>
      <%= form.file_field :logo, class: "form-control-file" %>
      <small class="form-text text-muted">File not bigger than 1MB.</small>
    </div>
  <% end %>


  <hr class="mb-4">

  <div class="actions">
    <%= form.submit 'Submit', class: "btn btn-primary btn-lg btn-block" %>
  </div>
<% end %>
