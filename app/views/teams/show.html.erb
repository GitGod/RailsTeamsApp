<div class="py-5">

  <% if notice %>
    <p id="notice" class="alert alert-success"><%= notice %></p>
  <% end %>

  <div class="row">

   <div class="col-md-6 mb-5">
     <% if @team.logo.exists? %>
       <%= image_tag @team.logo.url(:large), class: "img-fluid border rounded" %>
     <% else %>
       <%= holder_tag '600x600', @team.name, 'sky', { class: 'img-fluid border rounded' }, { auto: 'yes' } %>
     <% end %>
   </div>
   <div class="col-md-6">
     <h2><%= @team.name %></h2>
     <table class="table table-hover">
       <tbody>
         <tr>
           <th scope="row">City</th>
           <td class="text-right"><%= @team.city %></td>
         </tr>
         <tr>
           <th scope="row">Founded</th>
           <td class="text-right"><%= @team.year %></td>
         </tr>
         <tr>
           <th scope="row">Members count</th>
           <td class="text-right"><%= @team.member_count %></td>
         </tr>
       </tbody>
     </table>

     <table class="table bg-white">
       <thead class="thead-light">
         <tr>
           <th scope="col" colspan="2">Team members</th>
         </tr>
       </thead>
       <tbody>
         <% @players.each do |player| %>
          <tr>
              <td><%= link_to player.fullname, player %></td>
              <td class="text-right"><%= player.position %></td>
          </tr>
         <% end %>
         <% if @players.first.nil? %>
           <tr>
               <td colspan="2">No members</td>
           </tr>
         <% end %>
       </tbody>
     </table>

     <%= link_to "Edit", edit_team_path(@team), class: "btn btn-outline-primary" %>
     <%= link_to 'Delete', @team, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger" %>
   </div>
  </div>
</div>
